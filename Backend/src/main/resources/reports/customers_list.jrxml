            </line>
            <staticText>
                <reportElement style="SummaryStyle" x="0" y="5" width="150" height="20" uuid="f1a2b3c4-d5e6-7890-1234-567890abdef2"/>
                <textElement verticalAlignment="Middle"/>
                <text><![CDATA[Total Customers:]]></text>
            </staticText>
            <textField>
                <reportElement style="SummaryStyle" x="150" y="5" width="100" height="20" uuid="f1a2b3c4-d5e6-7890-1234-567890bcdef3"/>
                <textElement verticalAlignment="Middle"/>
