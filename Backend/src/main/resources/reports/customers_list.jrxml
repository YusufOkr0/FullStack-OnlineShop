            <staticText>
                <reportElement style="PageFooterStyle" x="0" y="5" width="200" height="20" uuid="f1a2b3c4-d5e6-7890-1234-567890abcdef"/>
                <textElement verticalAlignment="Middle"/>
                <text><![CDATA[$P{REPORT_FOOTER_TEXT}]]></text>
            </staticText>
            <textField>
                <reportElement style="PageFooterStyle" x="455" y="5" width="100" height="20" uuid="f1a2b3c4-d5e6-7890-1234-567890abcdf0"/>
                <textElement textAlignment="Right" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

    <summary>
        <band height="30" splitType="Stretch">
            <line>
                <reportElement x="0" y="0" width="555" height="1" uuid="f1a2b3c4-d5e6-7890-1234-567890abcef1"/>
                <graphicElement>
                    <pen lineWidth="0.5"/>
