                    <topPen lineWidth="0.0"/>
                    <leftPen lineWidth="0.0"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle" textAlignment="Center"/>
                <!-- Displaying the enum as a String -->
                <textFieldExpression><![CDATA[$F{role} != null ? $F{role}.toString() : "N/A"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement style="DetailStyle" x="490" y="0" width="65" height="20" uuid="f1a2b3c4-d5e6-7890-1234-567890abcdee"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.0"/>
                    <leftPen lineWidth="0.0"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle" textAlignment="Center"/>
                <!-- Calculate and display the size of the orders list -->
                <textFieldExpression><![CDATA[$F{orders} != null ? $F{orders}.size() : 0]]></textFieldExpression>
            </textField>
        </band>
