                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{id}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement style="DetailStyle" x="50" y="0" width="120" height="20" uuid="f1a2b3c4-d5e6-7890-1234-567890abcdea"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.0"/>
                    <leftPen lineWidth="0.0"/> <!-- Connects to the left cell -->
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle" isStyledText="false"/>
                <textFieldExpression><![CDATA[$F{username}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement style="DetailStyle" x="170" y="0" width="180" height="20" uuid="f1a2b3c4-d5e6-7890-1234-567890abcdeb"/>
