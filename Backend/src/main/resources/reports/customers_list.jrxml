    <property name="com.jaspersoft.studio.data.defaultdataadapter" value="One Empty Record"/>
    <property name="com.jaspersoft.studio.unit." value="pixel"/>
    <property name="com.jaspersoft.studio.unit.pageHeight" value="pixel"/>
    <property name="com.jaspersoft.studio.unit.pageWidth" value="pixel"/>
    <property name="com.jaspersoft.studio.unit.topMargin" value="pixel"/>
    <property name="com.jaspersoft.studio.unit.bottomMargin" value="pixel"/>
    <property name="com.jaspersoft.studio.unit.leftMargin" value="pixel"/>
    <property name="com.jaspersoft.studio.unit.rightMargin" value="pixel"/>
    <property name="com.jaspersoft.studio.unit.columnWidth" value="pixel"/>
    <property name="com.jaspersoft.studio.unit.columnSpacing" value="pixel"/>

    <!-- Styles -->
    <style name="TitleStyle" fontName="SansSerif" fontSize="18" isBold="true"/>
    <style name="ColumnHeaderStyle" fontName="SansSerif" fontSize="10" isBold="true" backcolor="#D3D3D3"/>
    <style name="DetailStyle" fontName="SansSerif" fontSize="9"/>
    <style name="PageFooterStyle" fontName="SansSerif" fontSize="8" isItalic="true"/>
    <style name="SummaryStyle" fontName="SansSerif" fontSize="10" isBold="true"/>

    <!-- Parameters (Optional) -->
    <parameter name="REPORT_TITLE" class="java.lang.String" isForPrompting="false">
        <defaultValueExpression><![CDATA["Customer List Report"]]></defaultValueExpression>
    </parameter>
    <parameter name="REPORT_FOOTER_TEXT" class="java.lang.String" isForPrompting="false">
        <defaultValueExpression><![CDATA["Generated by SWE212 Online Shop"]]></defaultValueExpression>
    </parameter>
    <!-- You could add a LOGO_IMAGE parameter here like in your example if needed -->

    <!-- Fields - Map to properties of the Customer object -->
    <field name="id" class="java.lang.Long"/>
    <field name="username" class="java.lang.String"/>
    <field name="address" class="java.lang.String"/>
    <field name="phone" class="java.lang.String"/>
    <field name="role" class="com.swe212.onlineshop.entity.Role"/> <!-- Use the actual Role enum class -->
    <field name="orders" class="java.util.List"/>

    <background>
        <band splitType="Stretch"/>
    </background>

    <title>
        <band height="60" splitType="Stretch">
            <staticText>
                <reportElement style="TitleStyle" x="0" y="10" width="555" height="30" uuid="f1a2b3c4-d5e6-7890-1234-567890abcde0"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[SWE212 Customer Report]]></text>
            </staticText>
            <textField pattern="MM/dd/yyyy HH:mm">
                <reportElement style="DetailStyle" x="400" y="40" width="155" height="15" uuid="a1b2c3d4-e5f6-7890-1234-567890abcde1"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>
            <line>
                <reportElement x="0" y="55" width="555" height="1" uuid="f1a2b3c4-d5e6-7890-1234-567890abcde2"/>
                <graphicElement>
                    <pen lineWidth="0.5"/>
                </graphicElement>
            </line>
        </band>
    </title>

    <columnHeader>
        <band height="20" splitType="Stretch">
            <staticText>
                <reportElement style="ColumnHeaderStyle" x="0" y="0" width="50" height="20" uuid="f1a2b3c4-d5e6-7890-1234-567890abcde3"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
